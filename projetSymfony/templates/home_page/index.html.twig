{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}


<div class="site-wrap ">
  
<section class="hero-area bg-1 text-center overly" style="background-image:url('{{ asset('assets/images/hero.jpg') }}') "  >
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- Header Contetnt -->
				<div class="content-block">
				
					<p>Join the millions who buy and sell from each other <br> everyday in local communities around the world</p>
					
				</div>
				<!-- Advance Search -->
				<div class="advance-search ">
         
          {{ form_start(form) }}
                            <div class="row " >
                                <!-- Store Search -->
                                <div class="col-md-12"style=" flex: 0 0 auto;width:430px">
                                    <div class="block d-flex">
                                          {{ form_row(form.mots) }} 
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="block d-flex">
                                          {{ form_row(form.categorie) }}
                                           {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
				</div>
				
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>
<br>
<br>
<br>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
          <div class="col-12">
            <h2>Annonces : ({{ annonces.getTotalItemCount }})</h2>
          </div>
        </div>
        <div class="row">
         {% for annonces in annonces %}
          <div class="col-lg-4 mb-4">
            <div class="entry2">
              <a href="{{path('app_annonce_detail', {'id':annonces.id})}}">
                <img class="img-fluid rounded" src="{{ vich_uploader_asset(annonces, 'imageFile') }}">
              </a>
              <div class="excerpt">
                <span class="post-category text-white bg-success mb-3">{{annonces.categorie.nom}}</span>
                {% if annonces.prix == null %}
               
                {% else %}
                  <span class="post-category text-white bg-warning mb-3">{{annonces.prix}}</span>
                {% endif %}
                <h4><a href="{{path('app_annonce_detail', {'id':annonces.id})}}">{{annonces.titre|slice(0,50)}}...</a></h4>
                <div class="post-meta align-items-center text-left clearfix">
                   <span class="author-figure mb-0 mr-3 float-left" style="margin-right:10px "> 
                    {% if annonces.annonceur.image == null %}
                    <img src="data:image/jpeg;base64," alt="Image" class="img-fluid" style="width:30">
                    {% else %}
                    <img src="{{asset('/uploads/'~ annonces.annonceur.image)}}" alt="Image" class="img-fluid" style="width:30">
                    {% endif %}
                   </span>
                   <span class="d-inline-block mt-1">By <a href="#">{{annonces.annonceur}}</a></span>
                   <span>&nbsp;-&nbsp;{{annonces.dateCreation|date("d/m/y H:i")}}</span>
                </div>

                <p>{{annonces.description|slice(0,150)}}...</p>
                 <span >
                 <a href="{{path('app_annonce_detail', {'id':annonces.id})}}">Read More</a>
                 </span> 
              </div>
            </div>
          </div>
         {% endfor %}
        </div>
        <div class="row text-center pt-5 border-top">
          <div class="col-md-12">
              {{ knp_pagination_render(annonces,'pagination/pagination.html.twig') }}
          </div>
        </div>
        </div>
    </div>
</div>

{% endblock %}
