{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}



<div class="site-section bg-light">
    <div class="container">

        <div class="row">
            <div class="col-sm"></div>
            <div class="col-sm bg-white"style="padding:50px">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom,{'attr' : {'class' : 'form form-control'}} ) }}
        {{ form_row(registrationForm.prenom,{'attr' : {'class' : 'form form-control'}}) }}
        {{ form_row(registrationForm.email,{'attr' : {'class' : 'form form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password','attr' : {'class' : 'form form-control'}
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn w-100  mt-2 btn-lg">Register</button>
    {{ form_end(registrationForm) }}
    </div>
            <div class="col-sm"></div>
        </div>
    </div>
</section>
<br>
<br>
<br>




{% endblock %}
